{
  "productName": "PhotoMint",
  "version": "0.1.0",
  "identifier": "xin.minapp.mint",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["*"]
      },
      "write-all": {
        "allow": ["*", "/*", "/**"]
      },
      "write-files": {
        "allow": ["*", "/*", "/**"]
      }
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "title": "PhotoMint",
        "width": 600,
        "height": 600
      }
    ],

    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
